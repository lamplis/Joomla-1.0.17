{
    "name": "joomla/joomla-1.0-testing",
    "description": "Comprehensive testing suite for Joomla 1.0 refactoring project",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.26",
        "sebastian/version": "4.0.0",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "test-unit": "phpunit tests/unit/",
        "test-integration": "phpunit tests/integration/",
        "test-functional": "phpunit tests/functional/",
        "phpstan": "phpstan analyse includes/ components/ modules/ --level=5",
        "phpcs": "phpcs --standard=PSR12 includes/ components/ modules/",
        "phpcbf": "phpcbf --standard=PSR12 includes/ components/ modules/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
